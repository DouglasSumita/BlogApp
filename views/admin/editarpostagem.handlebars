{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="alert alert-dark" role="alert">
    <h3>Editar Postagem:</h3>
    <div class="card">
        <div class="card-body">
            <form action="/postagens/editarpostagem" method="POST">
                <input type="hidden" value="{{postagem._id}}" name="id">
                <label for="nome">Título:</label>
                    <input type="text" name="titulo" value="{{postagem.titulo}}" class="form-control" required>
                <label for="slug">Slug:</label>
                    <input type="text" name="slug" value="{{postagem.slug}}" class="form-control" required>
                <label for="slug">Descrição:</label>
                    <input type="text" name="descricao" value="{{postagem.descricao}}" class="form-control" required>                    
                <label for="slug">Conteúdo:</label>
                    <textarea name="conteudo" class="form-control">{{postagem.conteudo}}</textarea required>
                <label for="categoria">Categoria:</label>
                <select name="categoria" id="categoria" class="custom-select" value="{{postagem.categoria}}" required>
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma postagem registrada</option>
                    {{/each}}
                </select>                       
                <button type="submit" class="btn btn-success mt-2">Editar Postagem</button>    
            </form>
        </div>
    </div>
</div>