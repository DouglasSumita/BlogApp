{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="alert alert-dark" role="alert">
    <h3>Nova Postagem:</h3>
    <div class="card">
        <div class="card-body">
            <form action="/postagem/nova" method="POST">
                <label for="nome">Título:</label>
                    <input type="text" id="titulo" name="titulo" class="form-control" required>
                <label for="slug">Slug:</label>
                    <input type="text" id="slug" name="slug" class="form-control" required>
                <label for="descricao">Descrição:</label>
                    <input type="text" id="descricao" name="descricao" class="form-control" required>                    
                <label for="conteudo">Conteúdo:</label>
                    <textarea name="conteudo" class="form-control"></textarea required>
                <label for="categoria">Categoria:</label>
                <select name="categoria" class="custom-select">
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma categoria registrada</option>
                    {{/each}}
                </select>                       
                <button type="submit" class="btn btn-success mt-2">Criar Postagem</button>    
            </form>
        </div>
    </div>
</div>